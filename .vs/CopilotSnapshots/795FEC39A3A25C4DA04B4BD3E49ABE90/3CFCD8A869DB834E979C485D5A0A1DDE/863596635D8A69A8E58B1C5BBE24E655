using FluentValidation;
using HousingHubBackend.Dtos;

namespace HousingHubBackend.Validators
{
    public class UpdateSocietyDtoValidator : AbstractValidator<UpdateSocietyDto>
    {
        public UpdateSocietyDtoValidator()
        {
            RuleFor(x => x.SocietyId).GreaterThan(0);
            RuleFor(x => x.Name).NotEmpty();
            RuleFor(x => x.Address).NotEmpty();
            RuleFor(x => x.State).NotEmpty();
            RuleFor(x => x.Country).NotEmpty();
            RuleFor(x => x.City).NotEmpty();
        }
    }
}
