using AutoMapper;
using HousingHubBackend.Models;
using HousingHubBackend.Dtos.Amenity;
using HousingHubBackend.Dtos.Booking;
using HousingHubBackend.Dtos.Complaint;
using HousingHubBackend.Dtos.Maintenance;
using HousingHubBackend.Dtos.Society;
using HousingHubBackend.Dtos.User;
using HousingHubBackend.Dtos.Visitor;
using HousingHubBackend.Dtos.Wing;
using HousingHubBackend.Dtos.Announcement;

namespace HousingHubBackend.Mapping
{
    public class EntityProfiles : Profile
    {
        public EntityProfiles()
        {
            CreateMap<Amenity, AmenityDto>().ReverseMap();
            CreateMap<Booking, BookingDto>().ReverseMap();
            CreateMap<Complaint, ComplaintDto>().ReverseMap();
            CreateMap<MaintenanceBill, MaintenanceBillDto>().ReverseMap();
            CreateMap<MaintenanceFee, MaintenanceFeeDto>().ReverseMap();
            CreateMap<Society, SocietyDto>().ReverseMap();
            CreateMap<UserAccount, UserAccountDto>().ReverseMap();
            CreateMap<Visitor, VisitorDto>().ReverseMap();
            CreateMap<Wing, WingDto>().ReverseMap();
            CreateMap<Announcement, AnnouncementDto>().ReverseMap();
        }
    }
}
