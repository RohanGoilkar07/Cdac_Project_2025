using System.Collections.Generic;
using System.Linq;
using HousingHubBackend.Models;
using HousingHubBackend.Services.Interfaces;
using HousingHubBackend.Data;

namespace HousingHubBackend.Services.Implementations
{
    public class UserService : IUserService
    {
        private readonly HousingHubDBContext _context;
        public UserService(HousingHubDBContext context)
        {
            _context = context;
        }

        public IEnumerable<UserAccount> GetAll()
        {
            return _context.UserAccounts.ToList();
        }

        public UserAccount GetById(int id)
        {
            return _context.UserAccounts.Find(id);
        }

        public UserAccount Add(UserAccount user)
        {
            _context.UserAccounts.Add(user);
            _context.SaveChanges();
            return user;
        }

        public UserAccount Update(int id, UserAccount user)
        {
            var existing = _context.UserAccounts.Find(id);
            if (existing == null) return null;
            existing.Name = user.Name;
            existing.Email = user.Email;
            existing.Phone = user.Phone;
            existing.Password = user.Password;
            existing.Role = user.Role;
            existing.SocietyId = user.SocietyId;
            existing.FlatId = user.FlatId;
            existing.IsVerified = user.IsVerified;
            _context.SaveChanges();
            return existing;
        }

        public bool Delete(int id)
        {
            var user = _context.UserAccounts.Find(id);
            if (user == null) return false;
            _context.UserAccounts.Remove(user);
            _context.SaveChanges();
            return true;
        }
    }
}